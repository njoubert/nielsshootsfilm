#!/usr/bin/env bash
# direnv configuration for nielsshootsfilm project
# Automatically loads when entering the project directory
# Install direnv: brew install direnv (and add hook to shell)

# Get the absolute path to the project root
PROJECT_ROOT="$(pwd)"
export PROJECT_ROOT

# Add root directory to PATH (for dev.sh, build.sh, etc.)
PATH_add .

# Add script directories to PATH
PATH_add scripts
PATH_add backend/scripts
PATH_add frontend/scripts

# Add build-bin to PATH (for compiled backend binary)
PATH_add build-bin/backend

# Load .env file if it exists
dotenv_if_exists

# Show helpful message when environment is loaded
echo "ðŸ“¸ nielsshootsfilm environment loaded"
echo "   Project root: $PROJECT_ROOT"
echo "   Root scripts: dev.sh, build.sh, format.sh, bootstrap.sh, provision.sh"
echo "   Utility scripts: test-api.sh, hash-password.sh"
echo "   Run scripts from anywhere in the repo!"
