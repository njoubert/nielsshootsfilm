# EditorConfig helps maintain consistent coding styles across editors
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.go]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[BUILD,*.bazel,*.bzl,WORKSPACE]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
