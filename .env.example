# Environment Variables Template
# Copy this file to .env and fill in your values
#
# Note: Both backend/ and frontend/ directories have symlinks pointing here:
#   backend/.env  -> ../.env
#   frontend/.env -> ../.env
# This ensures there is only one .env file at the project root

# Directory paths (relative to project root)
DATA_DIR=./data
UPLOAD_DIR=./static/uploads

# Server configuration
PORT=8080

# Admin authentication
# Note: Run ./bootstrap.sh to automatically generate a password hash
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_PASSWORD_HASH=

# Frontend configuration (for development)
VITE_PUBLIC_API_URL=http://localhost:8080

# Development deployment
SITE_URL=nielsshootsfilm.com
HOST=localhost
ADMIN_SERVER_PORT=8080

# Deployment server configuration (for rsync deployment)
DEPLOY_USER=njoubert
DEPLOY_HOST=njoubert.com
DEPLOY_PATH=/var/www/nielsshootsfilm.com/

# Development mode
DEV_MODE=true

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your-secret-key-here

# CORS settings (for development)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Image upload limits (in MB)
MAX_FILE_SIZE=100
MAX_BATCH_SIZE=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
